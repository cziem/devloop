<% include partials/header %>

<div class="ui main container text segment">
  <div class="ui huge header"><%= blog.title %></div>

  <div class="ui top attached">
    <div class="item">
      <img class="ui centered rounded image" src="<%= blog.imgUrl %>" alt="Picture of <%= blog.title %>">

      <div class="content">
        <span><strong><%= blog.author.username %></strong>, <%= moment(blog.createdAt).fromNow() %></span>
      </div>

      <div class="description">
        <p><%- blog.body %></p>
      </div>
    </div>

    <% if (currentUser && blog.author.id.equals(currentUser._id)) { %>
      <a href="/blogs/<%= blog._id %>/edit" class="ui pink basic button">Edit Post</a>
      <form class="delete-post" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
        <button class="ui red basic button">Remove Post</button>
      </form>
    <% } %>
  </div>
</div>

<% include partials/footer %>